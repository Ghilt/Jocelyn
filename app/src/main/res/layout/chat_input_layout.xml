<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray">

    <EditText
        android:id="@+id/textChatInput"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/chat_fragment_small_padding"
        android:layout_marginTop="@dimen/chat_fragment_small_padding"
        android:layout_marginStart="@dimen/chat_fragment_small_padding"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonSend"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonSend"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:backgroundTint="@color/test"
        android:backgroundTintMode="multiply"
        android:background="@drawable/paper_airplane_anim"
        android:layout_marginEnd="@dimen/chat_fragment_small_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textChatInput"
        app:layout_constraintBottom_toBottomOf="@id/textChatInput" />

</android.support.constraint.ConstraintLayout>
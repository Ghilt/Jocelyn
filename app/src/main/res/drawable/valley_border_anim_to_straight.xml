<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="50dp"
            android:height="4dp"
            android:viewportWidth="50"
            android:viewportHeight="10">
            <group android:name="layer1">
                <path
                    android:name="path10"
                    android:pathData="@dimen/vector_drawable_valley_straight_border_path"
                    android:fillColor="@color/lightGray"
                    android:strokeColor="@color/shadow_gradient"
                    android:strokeWidth="@dimen/stroke_width"/>
            </group>
        </vector>
    </aapt:attr>
    <target android:name="path10">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="pathData"
                android:duration="@dimen/transform_animation_duration"
                android:valueFrom="@dimen/vector_drawable_valley_straight_border_path"
                android:valueTo="@dimen/vector_drawable_valley_border_path"
                android:valueType="pathType"
                android:interpolator="@android:anim/anticipate_overshoot_interpolator"/>
        </aapt:attr>
    </target>
</animated-vector>
